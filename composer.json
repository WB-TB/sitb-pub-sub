{
    "name": "your-vendor/php-pubsub",
    "description": "PHP scripts for Google Cloud Pub/Sub consumer and producer",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "google/cloud-pubsub": "^1.4",
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PHP\\": "src/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "lint": "php vendor/bin/phpcs --standard=PSR12 src/",
        "fix": "php vendor/bin/phpcbf --standard=PSR12 src/"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}